---
import { getCollection } from 'astro:content'
import LayoutProse from '@layouts/LayoutProse.astro'
import { Button } from 'antislipprofiles-ui'

const seo = {
  title: 'Bedankt voor je bericht!',
  noinex: true,
}
---

<LayoutProse seo={seo}>
  <div class="flex flex-col items-center text-center">
    <h2>Deze pagina bestaat niet</h2>
    <p>Klik op onderstaande knop om onze producten te bekijken.</p>
    <Button
      class="mt-lg"
      variant="solid"
      href="/producten"
    >
      Bekijk producten
    </Button>
  </div>
</LayoutProse>
